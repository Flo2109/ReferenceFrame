<Window x:Class="FileEncryptionDecryptionDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileEncryptionDecryptionDemo"
        mc:Ignorable="d"
        Title="FileEncryptionDecryptionDemo"
        Height="450"
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Enter Password -&gt; press enter (decrypt) -&gt; change text -&gt; close app (encrypt)" />
            <TextBox x:Name="passwordBox" />
        </StackPanel>
        <TextBox x:Name="input" Grid.Row="1" />
    </Grid>
</Window>
